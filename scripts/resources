#!/bin/perl
use Net::OpenStack::Ceilometer;
use Data::Dumper;

my $a = Net::OpenStack::Ceilometer->new(
    host     => '192.168.0.177',
    username => 'admin',
    password => '885d4b669cc04a1b', # This should be in a config file, eh?
);

my $resources = $a->resources();
foreach my $r ( @$resources ) {
    print $r->{name} . "\n";
    print Dumper( $r );
}
